<resources>
    <!-- Base application theme. -->
    <style name="Iamport.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/iamport_colorPrimary</item>
        <item name="colorPrimaryDark">@color/iamport_colorPrimaryDark</item>
        <item name="colorAccent">@color/iamport_colorAccent</item>
    </style>

    <!-- 투명 액티비티 (웹뷰용) -->
    <style name="Iamport.Theme.AppCompat.Transparent.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowNoTitle">true</item>

        <item name="android:windowIsFloating">false</item>

        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 아예 투명 (네이티브 앱용) -->
    <style name="Iamport.Theme.AppCompat.Transparent.NoActionBar2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
